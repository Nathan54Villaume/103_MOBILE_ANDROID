{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=SQLAIATF\\SQL_AI_ATF;Database=AI_ATS;User Id=mes;Password=samsam;Encrypt=False;TrustServerCertificate=True;",
    "SqlAiAtr": "Server=SQLAIATF\\SQL_AI_ATF;Database=AI_ATR;User Id=mes;Password=samsam;Encrypt=False;TrustServerCertificate=True;"
  },
  "Acquisition": {
    "Parallelism": 6,
    "DefaultPollIntervalMs": 1500,
    "MaxBatchPoints": 1000,
    "JitterPct": 0.1
  },
  "WebMi": {
    "RequestTimeoutMs": 1500,
    "BasePath": "/webMI/?read"
  },
  "Polly": {
    "RetryCount": 3,
    "RetryBaseDelayMs": 150,
    "RetryMaxDelayMs": 2000,
    "RetryBackoffExponent": 2.0,
    "CircuitBreaker": {
      "Failures": 5,
      "WindowSeconds": 30,
      "BreakSeconds": 20,
      "MinThroughput": 2
    },
    "TimeoutMs": 1500,
    "Bulkhead": {
      "MaxParallelization": 6,
      "MaxQueuedActions": 10
    }
  },
  "SqlServer": {
    "MaxBufferSize": 1000,
    "MinBatchSize": 250,
    "MaxFlushIntervalMs": 5000,
    "CommandTimeoutSeconds": 30,
    "EnableBulkCopyOptimizations": true,
    "BulkCopyBatchSize": 1000,
    "EnableRetryPolicy": true,
    "MaxRetryAttempts": 3,
    "RetryBaseDelayMs": 1000
  },
  "DataRetention": {
    "Enabled": true,
    "RetentionDays": 10,
    "CleanupHour": 2,
    "BatchSize": 10000,
    "LogCleanupStats": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\API_ATF_MOBILE\\DATA\\logs\\app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
